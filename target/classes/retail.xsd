<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
targetNamespace="http://www.craftsoftware.com/users" 
xmlns:tns="http://www.craftsoftware.com/users" elementFormDefault="qualified">
 
	<xs:element name="GetProductRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="id" type="xs:int"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="GetProductResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Product" type="tns:Product"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="GetAllProductRequest">
		<xs:complexType></xs:complexType>
	</xs:element>
	<xs:element name="GetAllProductResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Product" type="tns:Product" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="DeleteProductRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="id" type="xs:int"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="DeleteProductResponse">
		<xs:complexType>
			<xs:sequence>
				<!-- 1 is success 0 is failure -->
				<xs:element name="status" type="tns:Status"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	

	<xs:element name="GetBillRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="id" type="xs:int"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="GetBillResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Bill" type="tns:Bill"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="GetAllBillRequest">
		<xs:complexType></xs:complexType>
	</xs:element>
	<xs:element name="GetAllBillResponse">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Bill" type="tns:Bill" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="DeleteBillRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="id" type="xs:int"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="DeleteBillResponse">
		<xs:complexType>
			<xs:sequence>
				<!-- 1 is success 0 is failure -->
				<xs:element name="status" type="tns:Status"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:simpleType name="Status">
		<xs:restriction base="xs:string">
			<xs:enumeration value="SUCCESS"/>
			<xs:enumeration value="FAILURE"/>
		</xs:restriction>
	</xs:simpleType>
		<xs:complexType name="Bill">
		<xs:sequence>
			<xs:element name="id" type="xs:int"/>
			<xs:element name="name" type="xs:string"/>
			<xs:element name="description" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="Product">
		<xs:sequence>
			<xs:element name="id" type="xs:int"/>
			<xs:element name="name" type="xs:string"/>
			<xs:element name="description" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
